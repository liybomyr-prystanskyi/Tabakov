{{#main-carousel}}
<section class="main-carousel">
  <div class="container main-container">
    <div class="row no-gutters">
      <div class="col-12">
        <!-- Carousel -->
        <div data-js="main-carousel">
          {{#slides}}
          <!-- Slide -->
          <div class="main-carousel__slide main-carousel__slide_one">
            <div class="slide-outer vocal-slide" style="background-image: url(assets/img/{{slide-name}}.jpg);">
              <div class="slide-inner">
                <div class="row">
                  <div class="col-12 col-lg-7 offset-lg-1">
                    <div class="main-carousel__slide__title-wrapper d-inline-block">
                      <h2>{{slide-title}}</h2>
                      <div class=" mt-3 d-flex flex-column-reverse flex-lg-column-reverse justify-content-between w-100 vocal-info-main ">
                        <div class="btn-mdf d-none">
                          <a class="btn btn_slide-more btn_slide-more__main" href="#">{{slide-btn-text}}</a>
                        </div>
                        <div class="vocal-button">
                          <a href="#" class="vocal-btn yellow">Записатися на заняття</a>
                        </div>
                        <div class="pos text-left text-lg-left">
                          <span>{{slide-description}}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="vocal-info d-none d-lg-flex lex-wrap">
                <div class="vocal-item col-12 col-12 col-md-3 col-lg-3">
                  <img src="assets/img/vocal-image-1.png" alt="image" />
                  <div class="d-flex justify-content-center vocal-description">
                    <p>Для дітей</p>
                    <h2><strong>6-15років</strong></h2>
                  </div>
                </div>
                <div class="vocal-item col-12 col-12 col-md-3 col-lg-3">
                  <img src="assets/img/vocal-image-2.png" alt="image" />
                  <div class="d-flex justify-content-center vocal-description">
                    <p>Вартість</p>
                    <h2><strong>2000грн</strong></h2>
                  </div>
                </div>
                <div class="vocal-item col-12 col-12 col-md-3 col-lg-3">
                  <img src="assets/img/vocal-image-3.png" alt="image" />
                  <div class="d-flex justify-content-center vocal-description">
                    <p>Навчання</p>
                    <h2><strong>Від 2-х років</strong></h2>
                  </div>
                </div>
                <div class="vocal-item col-12 col-12 col-md-3 col-lg-3">
                  <img src="assets/img/vocal-image-4.png" alt="image" />
                  <div class="d-flex justify-content-center vocal-description">
                    <p>Тривалість заняття</p>
                    <h2><strong>60-90хв.</strong></h2>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- /Slide -->
          {{/slides}}
          <!-- /Carousel -->
          <!-- Dots -->
          <div class="dots  d-none position-absolute w-100">
            <div class="row">
              <div class="col-12 col-lg-6 text-center">
                <div class="dots-place"></div>
              </div>
            </div>
          </div>
          <!-- /Dots -->
        </div>
      </div>
    </div>
  </div>
</section>
{{/main-carousel}}